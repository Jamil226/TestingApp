<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <TextView
        android:id="@+id/sing_up_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sing_up_title"
        android:textSize="20sp"
        android:layout_marginTop="60dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/sign_up_create_a_new_acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_acc"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/sing_up_title"/>
    <EditText
        android:id="@+id/et_sign_up_full_name"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:hint="@string/full_name"
        android:layout_marginLeft="30dp"
        android:padding="7dp"
        android:layout_below="@+id/sign_up_create_a_new_acc"
        android:textColor="#000000"
        android:layout_marginRight="30dp"
        android:background="@drawable/custom_edit_text"
        />
    <EditText
        android:id="@+id/et_sign_up_email"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:hint="@string/email"
        android:textColor="#000000"
        android:layout_marginLeft="30dp"
        android:padding="7dp"
        android:layout_marginRight="30dp"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/et_sign_up_full_name"
        android:background="@drawable/custom_edit_text"
        />

    <EditText
        android:id="@+id/et_sign_up_password"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:hint="Password"
        android:textColor="#000000"
        android:layout_marginLeft="30dp"
        android:padding="7dp"
        android:layout_below="@+id/et_sign_up_email"
        android:layout_marginRight="30dp"
        android:inputType="textPassword"
        android:background="@drawable/custom_edit_text"
        />
    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="@string/sing_up_title"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:background="@drawable/custom_bg_btn"
        android:padding="10dp"
        android:layout_below="@+id/et_sign_up_password"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:id="@+id/tv_do_not_have_an_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/btn_sign_up"/>
    <TextView
        android:id="@+id/tv_sign_up_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:textColor="#6153C3"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/btn_sign_up"
        android:layout_toEndOf="@+id/tv_do_not_have_an_account"
        android:layout_toRightOf="@+id/tv_do_not_have_an_account" />

</RelativeLayout>